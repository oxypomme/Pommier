<Window x:Class="OxyUtils.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OxyUtils"
        mc:Ignorable="d"
        Title="OxyUtils" SizeToContent="Height" Width="265"
        Closing="Window_Closing" ResizeMode="CanMinimize">
    <TabControl>
        <TabItem Header="Tools">
            <StackPanel Margin="5">
                <WrapPanel Margin="5">
                    <Button Name="btn_adb" Content="_Reload ADB" Click="btn_adb_Click" />
                    <Button Name="btn_mklink" Content="_Mklink" Click="btn_mklink_Click" />
                </WrapPanel>
                <GroupBox Header="ForceBindIP">
                    <StackPanel>
                        <ComboBox Name="cb_network" Margin="5" Grid.Column="0" DropDownOpened="cb_network_DropDownOpened" />
                        <WrapPanel Name="wp_fbi" />
                        <WrapPanel>
                            <Separator Width="210" Margin="5" />
                            <Button Content="New" Click="NewApp_Click" />
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </TabItem>
        <TabItem Header="Settings">
            <StackPanel Margin="5">
                <CheckBox Name="cbx_startup" Content="Launch at Startup" Checked="cbx_startup_Checked" Unchecked="cbx_startup_Checked" Margin="5,10,5,5" />
                <CheckBox Name="cbx_adb" Content="ADB at Startup" Margin="5,10,5,5" />
                <WrapPanel>
                    <CheckBox Name="cbx_shutdown" Content="Shutdown at" Margin="5,6,0,5" />
                    <TextBox Name="tbx_time" Text="20:00:00" Width="50" Margin="5" ToolTip="Format - hh:mm:ss" IsEnabled="False" />
                </WrapPanel>
                <Label Name="lbl_version" Content="v0.0.0.0" HorizontalAlignment="Right" />
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>